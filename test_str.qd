use str

fn main() {
	// Test len
	"hello" str::len . nl

	// Test concat
	"hello" " " str::concat "world" str::concat . nl

	// Test contains
	"hello world" "world" str::contains if {
		"contains: yes" . nl
	} else {
		"contains: no" . nl
	}

	// Test starts_with
	"hello world" "hello" str::starts_with if {
		"starts_with: yes" . nl
	} else {
		"starts_with: no" . nl
	}

	// Test ends_with
	"hello world" "world" str::ends_with if {
		"ends_with: yes" . nl
	} else {
		"ends_with: no" . nl
	}

	// Test upper
	"hello" str::upper . nl

	// Test lower
	"HELLO" str::lower . nl

	// Test trim
	"  hello  " str::trim . nl
}
