use bits

fn main( -- ) {
	// Test and - bitwise AND
	12 10 bits::and . nl
	// Should print nl: 8 (0b1100 & 0b1010 = 0b1000)
	15 7 bits::and . nl
	// Should print nl: 7 (0b1111 & 0b0111 = 0b0111)
	// Test or - bitwise OR
	12 10 bits::or . nl
	// Should print nl: 14 (0b1100 | 0b1010 = 0b1110)
	8 4 bits::or . nl
	// Should print nl: 12 (0b1000 | 0b0100 = 0b1100)
	// Test xor - bitwise XOR
	12 10 bits::xor . nl
	// Should print nl: 6 (0b1100 ^ 0b1010 = 0b0110)
	15 7 bits::xor . nl
	// Should print nl: 8 (0b1111 ^ 0b0111 = 0b1000)
	5 5 bits::xor . nl
	// Should print nl: 0 (same values XOR to 0)
	// Test not - bitwise NOT
	0 bits::not . nl
	// Should print nl: -1 (all bits set)
	-1 bits::not . nl
	// Should print nl: 0
	5 bits::not . nl
	// Should print nl: -6
	// Test lshift - logical shift left
	1 3 bits::lshift . nl
	// Should print nl: 8 (1 << 3 = 0b1000)
	5 2 bits::lshift . nl
	// Should print nl: 20 (5 << 2 = 0b10100)
	7 4 bits::lshift . nl
	// Should print nl: 112 (7 << 4 = 0b1110000)
	// Test rshift - logical shift right
	8 3 bits::rshift . nl
	// Should print nl: 1 (8 >> 3 = 0b1)
	20 2 bits::rshift . nl
	// Should print nl: 5 (20 >> 2 = 0b101)
	112 4 bits::rshift . nl
	// Should print nl: 7 (112 >> 4 = 0b111)
}
