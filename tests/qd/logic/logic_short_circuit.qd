// Test: logical short-circuit evaluation

use bits

fn main() {
	// Test AND short-circuit: false AND <anything> = false
	0 1 bits::and . nl

	// Test: true AND true = true
	1 1 bits::and . nl

	// Test: true AND false = false
	1 0 bits::and . nl

	// Test: false AND true = false
	0 1 bits::and . nl

	// Test OR short-circuit: true OR <anything> = true
	1 0 bits::or . nl

	// Test: false OR true = true
	0 1 bits::or . nl

	// Test: false OR false = false
	0 0 bits::or . nl

	// Test: true OR true = true
	1 1 bits::or . nl
}
